@model FinancePortal.Models.HouseholdCategory

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>HouseholdCategory</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!User.IsInRole("Admin") || !User.IsInRole("Head"))
            {
                <input type="hidden" asp-for="HouseholdId" />
            }

            @if (User.IsInRole("Admin") || User.IsInRole("Head"))
            {
                <div class="form-group">
                    <label asp-for="HouseholdId" class="control-label"></label>
                    <select asp-for="HouseholdId" class="form-control" asp-items="ViewBag.HouseholdId"></select>
                </div>

            }

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
