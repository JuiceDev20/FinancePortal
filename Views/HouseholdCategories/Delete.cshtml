@model FinancePortal.Models.HouseholdCategory

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />

    <div class="row">
        <dov class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-success">Household Category</h4>
                    <dl class="row">
                        <dt class="col-sm-3">
                            Name
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Description
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
            </div>
        </dov>
    </div>

    
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-primary" asp-controller="Households" asp-action="Dashboard">Back to List</a>
    </form>
</div>
