@model IEnumerable<FinancePortal.Models.HouseholdNotification>

@{
    ViewData["Title"] = "Index";
}

<h1>Notifications</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card">
    <table class="table">
        <thead class="thead-success">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRead)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRead)
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class="btn btn-primary" asp-controller="Households" asp-action="Dashboard">Back to Dashboard</a>