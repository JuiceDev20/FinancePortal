@model FinancePortal.Models.CategoryItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    
    <hr />
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-success">Category Item</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Description
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            TargetAmount
                        </dt>
                        <dd class="col-sm-10">
                            $@Html.DisplayFor(model => model.TargetAmount)
                        </dd>
                        <dt class="col-sm-2">
                            ActualAmount
                        </dt>
                        <dd class="col-sm-10">
                            $@Html.DisplayFor(model => model.ActualAmount)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>       
    </div>
</div>
<div>
    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a class="btn btn-outline-primary" asp-controller="Households" asp-action="Dashboard">Back to List</a>
</div>
