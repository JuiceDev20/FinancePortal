@using Microsoft.AspNetCore.Identity
@using FinancePortal.Services
@using FinancePortal.Data
@using FinancePortal.Enums

@inject IImageService ImageService
@inject UserManager<FPUser> UserManager
@inject ApplicationDbContext Context

@{
    var currentUser = await UserManager.GetUserAsync(User);

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>:: Money Tracker :: Home</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!------------------------>
    <!-- This is my Favicon -->
    <!------------------------>
    <link rel="icon" href="~/images/MT-logo-sm.png" type="image/x-icon">
    <!-- VENDOR CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/chartist.min.css" rel="stylesheet" />
    <link href="~/css/chartist-plugin-tooltip.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/css/toastr.css" rel="stylesheet" />

    <!--------------------->
    <!-- Tiny MCE Script -->
    <!--------------------->
    <script src="//cdn.tiny.cloud/1/l8uevwuzno0ksw0hxsz567wbuc969qkmvc4abwbzq6rr348m/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src='//kit.fontawesome.com/a076d05399.js'></script>
    <!-- MAIN CSS -->
    <link href="~/css/color_skins.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />

</head>
<body class="theme-green">

    <!----------------->
    <!-- Page Loader -->
    <!----------------->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img src="~/images/MT-logo-pl.png" alt="Money Tracker"></div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-------------------------->
    <!-- Overlay For Sidebars -->
    <!-------------------------->
    <div id="wrapper">
        <!---------------->
        <!-- Top Navbar -->
        <!---------------->
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-btn">
                    <button type="button" class="btn-toggle-offcanvas"><i class="lnr lnr-menu fa fa-bars"></i></button>
                </div>
                <div class="navbar-brand">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/MT-logo-sm.png" alt="Money Tracker Logo" style="width: 48px; height:48px" class="img-responsive logo"></a>
                </div>

                <div class="navbar-right">
                    <form id="navbar-search" class="navbar-form search-form">
                        <input value="" class="form-control" placeholder="Search here..." type="text">
                        <button type="button" class="btn btn-default"><i class="icon-magnifier"></i></button>
                    </form>
                    <!-------------------------------------------------------->
                    <!-- Top Navbar Right-Corner (Lobby, Log in) Navigation -->
                    <!-------------------------------------------------------->
                    @*<div id="navbar-menu">
                        <ul class="nav navbar-nav">
                            <li><a asp-controller="Home" asp-action="Index" class="icon-menu d-none d-sm-block"><i class="icon-home"></i></a></li>
                            <li><a asp-controller="Home" asp-action="Landing" class="icon-menu d-none d-sm-block"><i class="icon-anchor"></i></a></li>
                        </ul>
                    </div>*@
                </div>
            </div>
        </nav>


        <!----------------------------->
        <!-- Render Body R-tag--------->
        <!----------------------------->
        <div class="container-fluid" style="margin-top: 100px; padding-right: 40px; padding-left: 270px">
            <main>
                @if (TempData["OverDraft"] != null)
                {
                    <div class="alert alert-icon-right alert-danger mb-4" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-lable="Close"><svg data-dismiss="alert"></svg></button>
                        <svg>...</svg>
                        <strong>Warning!</strong> You're out of ca$h!!
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <!------------>
    <!-- Footer -->
    <!------------>
    <div>
        <footer class="border-top footer w-100 fixed-bottom bg-white text-center text-success">
            <div>
                &copy; 2020 ~ Money Tracker ~ Created by: O J OLMO ~ Full Stack Dev
            </div>
        </footer>
    </div>
    <!---------------->
    <!-- Javascript -->
    <!---------------->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/vendorscripts.bundle.js"></script>
    <script src="~/js/toastr.js"></script>
    <script src="~/js/knob.bundle.js"></script>
    <script src="~/js/chartist.bundle.js"></script>
    <script src="~/js/mainscripts.bundle.js"></script>



    <script>
        $(document).ready(function () {
            $('.table').DataTable();
            tinymce.init({ selector: '#Body' });
        });

    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>
