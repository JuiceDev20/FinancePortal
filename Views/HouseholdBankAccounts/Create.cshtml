@using FinancePortal.Enums

@model FinancePortal.Models.HouseholdBankAccount

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-success">New Bank Account</h4>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="HouseholdId" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountType" class="control-label"></label>
                        <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<AccountType>()"></select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartingBalance" class="control-label"></label>
                        <input asp-for="StartingBalance" class="form-control" type="number" step="any" min="0.01" max="99999999.99" />
                        <span asp-validation-for="StartingBalance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>          
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
