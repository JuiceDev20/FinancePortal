@model FinancePortal.Models.HouseholdBankAccount

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-success">Bank Account</h4>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="FPUserId" />
                    <input type="hidden" asp-for="HouseholdId" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountType" class="control-label">Account Type</label>
                        <input asp-for="AccountType" class="form-control" />
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartingBalance" class="control-label">Starting Balance</label>
                        <input asp-for="StartingBalance" class="form-control" />
                        <span asp-validation-for="StartingBalance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentBalance" class="control-label">Current Balance</label>
                        <input asp-for="CurrentBalance" class="form-control" />
                        <span asp-validation-for="CurrentBalance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
