@model FinancePortal.Models.Household

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-success">Household</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Greeting
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Greeting)
                        </dd>
                        <dt class="col-sm-2">
                            Created
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Created)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>      
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-controller="Households" asp-action="Dashboard">Back to List</a>
    </form>
</div>
